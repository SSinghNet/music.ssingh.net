doctype html
html(lang="en")
    head
        title  #{title}SSingh.Net Music
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"  integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css")
        link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Didact%20Gothic")
        link(rel="stylesheet", href="/styles/main.css")
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        script(src="/scripts/jquery.js") 
        style.
            html, body {
                overflow:hidden;
            }
    body 
        // sidebar   
        div.row.admin
            div.col-lg-2.col-4.sidebar
                a.navbar-brand(href="/") 
                    img.me-3.d-inline-block.align-bottom(src="/images/slogo.png")
                    |Music 
                hr
                span#sidebar-elements
                    a.sidebar-element(href="/admin?type=albums") albums
                    a.sidebar-element(href="/admin?type=artists") artists
                    a.sidebar-element(href="/admin?type=tags") tags
                    a.sidebar-element(href="/admin?type=lists") lists

            script(src="scripts/sidebar.js") 

            div.col-lg-10.col-8(style="padding:0;")
                div.sidebar-content
                    block main 

         
        
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous")

        include footer.pug
